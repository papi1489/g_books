<div style="display:inline-block; float:left;">
     <h3>Statistique:</h3>
	<p><strong>Nombre de livre:  <span style="color:red;"><%= @books.count %></span><strong></p>
</div>
<div style="display:inline-block; float:right;">
<%= render 'searchs/search' %>
</div>
<div class="liste_livr">
<h1>Liste des livres</h1>

<table>
  <thead>
    <tr>
	  <th>Image</th>
      <th>Info</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="case_image"><center><%= link_to image_tag(book.image, class:'image'), book  %></center><br />
		   
		</td>
		<td class="case_info">
		    <p><b>Titre:</b><%= book.titre %></p>
		    <p><b>Auteur:</b><%= book.auteur %><br /></p>
			<p><b>Rayon:</b><%= book.rayon %><br /></p>
			<p><b>Date d'ajout:</b><br /><%= book.created_at %></p>
		</td>
		
		<td class="case_action">
		    <p><%= link_to image_tag('apercu.png'), book  %><br /></p>
		    <p><%= link_to image_tag('modifier.png'), edit_book_path(book) %><br /></p>
			<p><%= link_to image_tag('sup.png'), book, method: :delete, data: { confirm: 'Are you sure?' } %><br /></p>
		</td>
       </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un livre', new_book_path %>
</div>