<h2> Resultats de recherche:</h2>
<% unless @books.empty? %>
<div class="liste_livr">
<table>
  <thead>
    <tr>
   <th>Image</th>
      <th>Info</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="case_image"><center><%= link_to image_tag(book.image, class:'image'), book  %></center><br />
     
  </td>
  <td class="case_info">
      <p><b>Titre:</b><%= book.titre %></p>
      <p><b>Auteur:</b><%= book.auteur %><br /></p>
   <p><b>Rayon:</b><%= book.rayon %><br /></p>
   <p><b>Date d'ajout:</b><br /><%= book.created_at %></p>
  </td>
  
  <td class="case_action">
      <p><%= link_to 'Afficher', book %><br /></p>
      <p><%= link_to 'Modifier', edit_book_path(book) %><br /></p>
   <p><%= link_to 'supprimer', book, method: :delete, data: { confirm: 'Are you sure?' } %><br /></p>
  </td>
       </tr>
    <% end %>
  </tbody>
</table>
</div>
<% else %>
<p>Aucun element trouve</p>

<% end %>
<br>

<%= link_to 'Retour', search_path %>
</div>